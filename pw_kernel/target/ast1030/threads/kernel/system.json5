// ASPEED AST1030 Threads test configuration
// Target: ASPEED AST1030 BMC (ARM Cortex-M4)
// Hardware: 640KB usable SRAM (executes from RAM, no XIP)
// Reference: aspeed-rust memory.x
{
    arch: {
        type: "armv7m",
        vector_table_start_address: 0x00000000,
        vector_table_size_bytes: 1056,  // 0x420 (264 vectors)
    },
    kernel: {
        flash_start_address: 0x00000420,  // After vector table (per aspeed-rust _stext)
        flash_size_bytes: 262144,         // 256KB for kernel code (in RAM)
        ram_start_address: 0x00040420,    // RAM for data starts after 256KB code
        ram_size_bytes: 393216,           // Remaining RAM: 640KB - 256KB - 1KB = 383KB, round to 384KB
    },
}
