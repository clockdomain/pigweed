// AST1030 IPC Test Configuration
// ARM Cortex-M4 @ 200 MHz (simulated at 12 MHz for QEMU)
// 768KB SRAM (640KB usable), executes from RAM
//
// Memory Layout:
//   0x00000000 - 0x00000420: Vector table (1056 bytes)
//   0x00000420 - 0x00040420: Kernel code (256KB)
//   0x00040420 - 0x00060420: Initiator app code (128KB)
//   0x00060420 - 0x00080420: Handler app code (128KB)
//   0x000a0420 - 0x000a4420: Initiator app RAM (16KB)
//   0x000a4420 - 0x000a8420: Handler app RAM (16KB)
{
    arch: {
        type: "armv7m",
        vector_table_start_address: 0x00000000,
        vector_table_size_bytes: 1056,  // 0x420 (264 vectors)
    },
    kernel: {
        flash_start_address: 0x00000420,  // After vector table
        flash_size_bytes: 262144,         // 256KB for kernel code (in RAM)
        ram_start_address: 0x00080420,    // RAM starts after app code
        ram_size_bytes: 131072,           // 128KB for kernel data
    },
    apps: {
        initiator: {
            flash_size_bytes: 131072, // 128KB
            ram_size_bytes: 16384,    // 16KB
            process: {
                name: "initiator process",
                objects: {
                    IPC: {
                        type: "channel_initiator",
                        handler_app: "handler",
                        handler_object_name: "IPC",
                    }
                },
                threads: [
                    {
                        name: "initiator thread",
                        stack_size_bytes: 1024,
                    },
                ],
            },
        },
        handler: {
            flash_size_bytes: 131072, // 128KB
            ram_size_bytes: 16384,    // 16KB
            process: {
                name: "handler process",
                objects: {
                    IPC: {
                        type: "channel_handler",
                    },
                },
                threads: [
                    {
                        name: "handler thread",
                        stack_size_bytes: 1024,
                    },
                ],
            },
        },
    },
}
