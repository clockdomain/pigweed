// ARMv7-M Minimal Interrupts test configuration
// Target: Stellaris LM3S6965EVB (ARM Cortex-M3)
// Hardware: 256KB Flash, 64KB RAM
// Reference: https://www.ti.com/lit/ds/symlink/lm3s6965.pdf
{
  arch: {
    type: "armv7m",
    vector_table_start_address: 0x00000000,
    vector_table_size_bytes: 1024,     // 1KB (256 vectors * 4 bytes) - FIXED from 2KB
  },
  kernel: {
    flash_start_address: 0x00000400,   // 1KB offset after vector table - FIXED from 0x800
    flash_size_bytes: 261632,          // 255KB (256KB - 1KB vector table) - FIXED
    ram_start_address: 0x20000000,
    ram_size_bytes: 65536,             // 64KB (full hardware capacity) - FIXED from 32KB
    interrupt_table: {
      table: {
        "42": "test_interrupts::test_interrupt_handler",
      }
    },
  },
}
