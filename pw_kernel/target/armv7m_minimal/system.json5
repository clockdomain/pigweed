// Minimal ARMv7-M system configuration for testing
// Note: Using "armv8m" type since system generator doesn't distinguish v7/v8
{
  arch: {
    type: "armv8m",
    vector_table_start_address: 0x00000000,
    vector_table_size_bytes: 1024,  // 256 vectors * 4 bytes
  },
  kernel: {
    flash_start_address: 0x00000400,  // After vector table
    flash_size_bytes: 261120,         // ~255KB for kernel
    ram_start_address: 0x20000000,
    ram_size_bytes: 32768,            // 32KB RAM
  },
  apps: [
    {
      name: "hello",
      flash_size_bytes: 8192,   // 8KB flash for app
      ram_size_bytes: 2048,     // 2KB RAM for app
      stack_size_bytes: 1024,   // 1KB stack
      channels: [],
      interrupts: [],
    },
  ],
}
