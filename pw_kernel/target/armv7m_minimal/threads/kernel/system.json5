// ARMv7-M Minimal Threads test configuration
// ARM Cortex-M3 for LM3S6965EVB QEMU
// Standard Cortex-M memory layout: Flash at 0x0, RAM at 0x20000000
{
    arch: {
        type: "armv7m",
        vector_table_start_address: 0x00000000,
        vector_table_size_bytes: 1024,  // 0x400 (256 vectors * 4 bytes)
    },
    kernel: {
        flash_start_address: 0x00000400,  // After vector table
        flash_size_bytes: 130560,         // ~127KB for kernel code
        ram_start_address: 0x20000000,    // Standard Cortex-M RAM base
        ram_size_bytes: 32768,            // 32KB for kernel data
    },
}
